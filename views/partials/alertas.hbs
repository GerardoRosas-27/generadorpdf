{{#if success}}
<div class="container">
  <div class="row">
    <div class="col-12 col-md-4 mx-sm-auto">
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="icofont-notification"></i><strong>¡Exito! </strong>{{success}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
  </div>
</div>

{{else}}
{{#if danger }}
<div class="container">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="icofont-notification"></i><strong>¡Error! </strong>{{danger}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
  </div>
</div>

{{else}}
{{#if cargar}}
<div class="container">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="alert alert-success alert-dismissible fade show" role="alert">
       <div class="spinner-border" role="status">
    <span class="sr-only">Loading...</span>
  </div>
        <strong>Cargando...</strong>{{cargar}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
  </div>
</div>
{{/if}}
{{/if}}
{{/if}}